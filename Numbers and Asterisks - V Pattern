






#include <stdio.h>
int main()
{
int N,D=1;
scanf("%d",&N);
for(int i=0;i<N;i++)
{
    for(int k=0;k<i;k++)
    {
        printf("*");
    }
    int D=1;
    for(int j=0;j<N-i;j++)
    {
       if(j==N-i-1)
       {
           printf("%d",D++);
       }
       else
       {
           printf("%d*",D++);
       }
    }
    for(int k=0;k<i;k++)
    {
        printf("*");
    }
    printf("\n");
}
}
